<h1>Create a new Song</h1>

<form action="/songs" method="POST">
  <label for="Name">Name:</label>
  <br>
  <input id="Name" type="text" name="song[name]">

  <h3>Existing Artists</h3>
  <% @artists.each do |artist| %>
    <input type="radio" name="song[artist_id]" id="artist_<%= artist.id %>" value="<%= artist.id %>"><%= artist.name %><br>
  <% end %>
  <br>

  <h3>New Artist</h3>
    <label>Artist Name:</label>
    <br>
    <input  id="Artist Name" type="text" name="artist[name]"></input>

    <h3>Existing Genres</h3>
    <% @genres.each do |genre| %>
      <input type="checkbox" name="song_genre[genre_ids][]" id="<%= genre.name %>" value="<%= genre.id %>"><%= genre.name %><br>
    <% end %>
    <br>
  
    <h3>New Genre</h3>
      <label>Genre Name:</label>
      <br>
      <input id="Genre Name" type="text" name="genre[name]"></input>
      <br>
   <br>
    <input type="submit" value="Create">
</form>